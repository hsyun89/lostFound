  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="LostMapper">
 	<select id="readListLost"  resultType="vo.LostVO">
 		select Addr, Unique_id, Content, Keep_place, Image_address, Product_name, Find_date, Category, lon, lat from lost order by Find_date desc limit #{pageStart}, #{perPageNum}
 	</select>
 	<select id="listPageCount" resultType="int">
 		select count(Unique_id) from lost
 	</select>
